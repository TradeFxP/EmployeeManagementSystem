@{
    ViewData["Title"] = "Assign Task";
}

<h3>Assign Task</h3>

<form method="post">
    <div class="mb-2">
        <label>Task Title</label>
        <input name="title" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Priority</label>
        <select name="priority" class="form-select">
            <option>Low</option>
            <option selected>Medium</option>
            <option>High</option>
        </select>
    </div>

    <div class="mb-2">
        <label>Assign To</label>
        <select name="assignedToId" class="form-select">
            @foreach (var user in ViewBag.Users)
            {
                <option value="@user.Id">@user.Name (@user.Email)</option>
            }
        </select>
    </div>

    <button class="btn btn-primary">Assign Task</button>
</form>

@if (ViewBag.AssignedTasks != null && ((List<UserRoles.Models.AssignedTask>)ViewBag.AssignedTasks).Any())
{
    <hr />
    <h5 class="mt-4">📋 Assigned Tasks</h5>

    <table class="table table-bordered table-sm mt-3 align-middle">
        <thead class="table-light">
            <tr>
                <th>Task</th>
                <th>Priority</th>
                <th>Assigned To</th>
                <th>Assigned On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in (List<UserRoles.Models.AssignedTask>)ViewBag.AssignedTasks)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>
                        <span class="badge bg-@(task.Priority == "High" ? "danger" :
                                                                         task.Priority == "Medium" ? "warning" : "secondary")">
                            @task.Priority
                        </span>
                    </td>
                    <td>@task.AssignedTo?.FirstName</td>
                    <td>@task.CreatedAt.ToLocalTime().ToString("dd-MM-yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted mt-3">No tasks assigned yet.</p>
}

