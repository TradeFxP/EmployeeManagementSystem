    <script>
        function toggleTeamTasks() {
            const dropdown = document.getElementById("teamTasksDropdown");
            const arrow = document.getElementById("teamArrow");

            if (dropdown.style.display === "none") {
                dropdown.style.display = "block";
                arrow.innerText = "▲";
