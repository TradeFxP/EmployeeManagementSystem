@* admin manager edit report panel of user reports *@
@model UserRoles.ViewModels.ReportViewModel

<div class="card shadow-sm">
    <div class="card-body">

        <h6 class="mb-3">✏️ Edit Report</h6>

        <form id="editReportForm">

            <input type="hidden" id="editReportId" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">Task</label>
                <textarea class="form-control"
                          id="editTask"
                          rows="2"
                          required>@Model.Task</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Note</label>
                <textarea class="form-control"
                          id="editNote"
                          rows="3"
                          required>@Model.Note</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Reviewer Comment</label>
                <textarea class="form-control"
                          id="editReviewerComment"
                          rows="2">@Model.ReviewerComment</textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    Update
                </button>

                <button type="button"
                        class="btn btn-secondary"
                        onclick="cancelEdit()">
                    Cancel
                </button>
            </div>

        </form>
    </div>
</div>

<script>
    // Fallback cancel: reload reports panel for the same user
    function cancelEdit() {
        const userId = "@(ViewBag.TargetUserId ?? "")";
        if (userId && typeof loadReports === "function") {
            loadReports(userId);
            return;
        }
        // otherwise clear details panel
        const panel = document.getElementById("detailsPanel");
        if (panel) panel.innerHTML = "";
    }

    document.getElementById("editReportForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const id = document.getElementById("editReportId").value;
        const task = document.getElementById("editTask").value;
        const note = document.getElementById("editNote").value;
        const reviewerComment = document.getElementById("editReviewerComment").value;

        const response = await fetch("/Reports/InlineUpdate", {
            method: "POST",
            headers: {
                "Content-Type": "application/x-www-form-urlencoded"
            },
            body: new URLSearchParams({
                id: id,
                task: task,
                note: note,
                reviewerComment: reviewerComment
            }),
            credentials: "same-origin"
        });

        if (!response.ok) {
            alert(await response.text());
            return;
        }

        // Update table row in-place if present
        try {
            const row = document.getElementById('report-row-' + id);
            if (row) {
                const textCells = row.querySelectorAll('.report-text');
                if (textCells && textCells.length >= 2) {
                    textCells[0].textContent = task;
                    textCells[1].textContent = note;
                }

                const reviewCell = row.querySelector('.col-review');
                if (reviewCell) {
                    reviewCell.textContent = reviewerComment && reviewerComment.trim() !== '' ? reviewerComment : '—';
                }
            }
        } catch (err) {
            // ignore DOM update errors
            console.error(err);
        }

        // Call loadReports to ensure panel and pagination stay consistent
        const userId = "@(ViewBag.TargetUserId ?? "")";
        if (userId && typeof loadReports === "function") {
            loadReports(userId);
        }

    });
</script>
