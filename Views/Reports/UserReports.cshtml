@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Auto-dismiss alerts
        document.querySelectorAll('.auto-dismiss').forEach(alert => {
            const timeout = parseInt(alert.dataset.timeout || 5000);
            setTimeout(() => {
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 800);
            }, timeout);
        });

        // Validation helpers
        function validateTodayReportForm() {
            const checkboxes = document.querySelectorAll('.today-checkbox:checked');
            const errorDiv = document.getElementById('todayReportedToError');

            if (checkboxes.length === 0) {
                if (errorDiv) errorDiv.classList.remove("d-none");
                return false;
            }

            if (errorDiv) errorDiv.classList.add("d-none");
            return true;
        }

        document.addEventListener("DOMContentLoaded", function() {
            document.querySelectorAll('.today-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const errorDiv = document.getElementById('todayReportedToError');
                    if (errorDiv && this.checked) {
                        errorDiv.classList.add("d-none");
                    }
                });
            });
        });

        // Character Counter
        document.addEventListener("input", function (e) {
            if (!e.target.classList.contains("char-limit")) return;
            const max = e.target.getAttribute("maxlength");
            const counterId = e.target.dataset.counter;
            const counter = document.getElementById(counterId);
            if (!counter) return;           
            counter.textContent = (max - e.target.value.length) + " chars remaining"; // Shortened text
        });

        // Toast Helper
         function showToast(text, type = 'success', timeout = 3000) {
            let container = document.querySelector('.toast-container-fixed');
            if (!container) {
                container = document.createElement('div');
                container.className = 'toast-container-fixed';
                document.body.appendChild(container); // Ensure it's in body
            }
            const toast = document.createElement('div');
            toast.className = 'alert alert-' + type + ' toast-message shadow-lg border-0 d-flex align-items-center gap-2';
            toast.innerHTML = (type === 'success' ? '<i class="bi bi-check-circle-fill"></i> ' : '<i class="bi bi-exclamation-triangle-fill"></i> ') + text;
            container.appendChild(toast);
            setTimeout(() => {
                toast.classList.add('fade');
                setTimeout(() => toast.remove(), 400);
            }, timeout);
        }

        // AJAX Delete
        async function deleteReport(id, userId) {
            if (!confirm('Are you sure you want to delete this report?')) return;

            try {
                const res = await fetch('/Reports/DeleteInline', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: new URLSearchParams({ id }).toString(),
                    credentials: 'same-origin'
                });

                if (!res.ok) {
                    const txt = await res.text();
                    alert(txt || 'Failed to delete');
                    return;
                }

                let data;
                try { data = await res.json(); } catch { data = null; }

                const row = document.getElementById('report-row-' + id);
                if (row) {
                    row.style.transition = 'all 0.3s';
                    row.style.opacity = '0';
                    row.style.transform = 'translateX(20px)';
                    setTimeout(() => row.remove(), 300);
                }

                showToast(data && data.message ? data.message : 'Report deleted successfully', 'success', 2500);

                if (typeof loadReports === 'function') {
                    setTimeout(() => loadReports(userId), 700);
                }
            } catch (ex) {
                console.error(ex);
                alert('Failed to delete report');
            }
        }

        // Submit Handler
        document.getElementById("todaySubmitBtn")?.addEventListener("click", async function () {
            const form = document.getElementById("todayReportedForm") || document.getElementById("todayReportForm");
            if (!form) return;

            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            if (!validateTodayReportForm()) return;

            const btn = document.getElementById("todaySubmitBtn");
            const originalText = btn.innerHTML;
